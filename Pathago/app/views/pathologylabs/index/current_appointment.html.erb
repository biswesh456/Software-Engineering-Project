<h1> Current Appointments</h1>
<br>
<br>
<style>
    table {
      border-collapse: separate;
      border-spacing: 0;
      color: #4a4a4d;
      font: 14px/1.4 "Helvetica Neue", Helvetica, Arial, sans-serif;
    }
    th,
    td {
      padding: 30px 50px;
      vertical-align: middle;
      align: middle;
      border-bottom: 1px solid #cecfd5;
      border-right: 1px solid #cecfd5;
    }
    thead {
      background: #395870;
      background: linear-gradient(#49708f, #293f50);
      color: #fff;
      font-size: 18px;
      text-transform: uppercase;
    }
    th:nth-child(n){
        border-top-left-radius: 5px;
        text-align: center;
    }
    tbody tr:nth-child(even) {
      background: #f0f0f2;
    }
    .appt-id{
      color: #395870;
      display: block;
      text-align: center;
    }
    .appt-text {
      text-align: center;
    }
</style>

<table width = 1200>
  <thead>
    <tr>
      <th scope="col">Test Name</th>
      <th scope="col">Patient Id</th>
      <th scope="col">Patient Name</th>
      <th scope="col">Status</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @appointments.each do |f|%>
      <script>
        '<%=@path_test = PathologyLabTest.find(f.pathology_lab_test_id)%>'
        '<%=@patient = Patient.find(f.patient_id)%>'
      </script>
        <tr>
            <td>
            <strong class="appt-id"><%= @path_test.test.name%></strong>
            </td>
            <td class="appt-text"><%= @patient.id%></td>
            <td class="appt-text"><%= @patient.name%></td>
            <td class="appt-text"><%=f.status%></td>
            <td class="appt-text"><%= link_to('Edit', pathologylab_edit_appointment_path(app_id: f.id), method: :get, class: 'btn btn-primary')%></td>
        </tr>
    <%end%>
  </tbody>
</table>
